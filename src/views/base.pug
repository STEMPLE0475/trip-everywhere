doctype html
html(lang="en")
    head
        <link rel="stylesheet" href="https://unpkg.com/mvp.css@1.11/mvp.css">
    body
        nav
            ul
                li
                    a(href="/") Home
                li 
                    a(href="/search") Search
                if loggedIn
                    li
                        a(href=`/user/${loggedInUser._id}`) My profile
                    li
                        a(href="/user/edit") Edit Profile
                    li
                        a(href="/user/logout") Log Out
                    li
                        a(href="/video/upload") Upload
                else
                    li
                        a(href="/login") Log In
                    li
                        a(href="/register") Register
                    
                
        if message
            h1=message

        aside
            ul
                if loggenIn
                    span Welcome!!
                    span #{loggedInUser.name}
                else
                
                li
                    a(href="like") Like
                li
                    a(href="user") User
                li
                    a(href="subscribe") Subscribe 
        
        block content

